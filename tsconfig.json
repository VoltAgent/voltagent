{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "core": ["tools/core/src/index.ts"],
      "generate-package": ["tools/generate-package/src/index.ts"],
      "generators": ["tools/generators/src/index.ts"],
      "tools": ["tools/src/index.ts"]
    },
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules", "dist", "**/node_modules", "**/dist", "website", "**/website"]
}
